<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamesActivity" >

    <RelativeLayout android:id="@+id/games_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
        android:padding="10dp"
        android:paddingBottom="8dp"
	    android:focusableInTouchMode="true" >
    	<ImageView android:id="@+id/games_search_image"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerVertical="true"
    	    android:background="@drawable/ic_menu_search_holo_light"
    	    android:contentDescription="@string/games_search" />
    	        
	    <EditText
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/games_search_image"
    	    android:layout_centerVertical="true"
	        android:singleLine="true"
	        android:hint="@string/games_search"
	        android:textSize="18sp" />
	</RelativeLayout>
    
    <ListView android:id="@+id/games_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/games_search"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:divider="@android:color/transparent"
  		android:dividerHeight="10dp"
  		android:clipToPadding= "true" />
</RelativeLayout>