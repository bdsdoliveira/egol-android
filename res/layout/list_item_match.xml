<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:padding="10dp"
   	android:background="@drawable/item_box" >
    
    <TextView android:id="@+id/list_item_teams"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
    	android:textSize="42sp"
    	android:textColor="#777" />

    <TextView android:id="@+id/list_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_teams"
        android:textSize="16sp"
        android:textColor="#999" />

	<TextView android:id="@+id/list_item_city"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/list_item_date"
    	android:textSize="16sp"
    	android:textColor="#999" />
	
    <TextView android:id="@+id/list_item_stadium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_city"
        android:textSize="16sp"
        android:textColor="#999" />

    <TextView android:id="@+id/list_item_stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_stadium"
        android:textSize="16sp"
        android:textColor="#999" />
    
</RelativeLayout>